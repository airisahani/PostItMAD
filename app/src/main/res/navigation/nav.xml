<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.example.module1.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_signUp"
            app:destination="@id/logIn" />
        <action
            android:id="@+id/action_splash_to_signUp2"
            app:destination="@id/signUp" />
    </fragment>
    <fragment
        android:id="@+id/logIn"
        android:name="com.example.module1.LogIn"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logIn_to_userProfile"
            app:destination="@id/userProfile" />
        <action
            android:id="@+id/action_logIn_to_forgotPassword"
            app:destination="@id/forgotPassword" />
    </fragment>
    <fragment
        android:id="@+id/userProfile"
        android:name="com.example.module1.UserProfile"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" >
        <action
            android:id="@+id/action_userProfile_to_uploadImage"
            app:destination="@id/uploadImage" />
        <action
            android:id="@+id/action_userProfile_to_changePassword"
            app:destination="@id/changePassword" />
        <action
            android:id="@+id/action_userProfile_to_deleteAccount"
            app:destination="@id/deleteAccount" />
    </fragment>
    <fragment
        android:id="@+id/forgotPassword"
        android:name="com.example.module1.ForgotPassword"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_forgotPassword_to_splash"
            app:destination="@id/splash" />
    </fragment>
    <fragment
        android:id="@+id/welcome"
        android:name="com.example.module1.Welcome"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <argument
            android:name="username"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_welcome_to_userProfile"
            app:destination="@id/userProfile" />
    </fragment>
    <fragment
        android:id="@+id/signUp"
        android:name="com.example.module1.SignUp"
        android:label="SignUp" >
        <action
            android:id="@+id/action_signUp_to_welcome"
            app:destination="@id/welcome" />
    </fragment>
    <fragment
        android:id="@+id/uploadImage"
        android:name="com.example.module1.UploadImage"
        android:label="fragment_upload_image"
        tools:layout="@layout/fragment_upload_image" />
    <fragment
        android:id="@+id/changePassword"
        android:name="com.example.module1.ChangePassword"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />
    <fragment
        android:id="@+id/deleteAccount"
        android:name="com.example.module1.DeleteAccount"
        android:label="fragment_delete_account"
        tools:layout="@layout/fragment_delete_account" />
</navigation>